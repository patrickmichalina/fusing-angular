{
  "name": "fusing-angular",
  "description": "fusing-angular",
  "author": "Patrick Michalina",
  "license": "MIT",
  "version": "0.0.1",
  "main": "dist/electron/main.js",
  "repository": {
    "url": "https://github.com/patrickmichalina/fusing-angular"
  },
  "scripts": {
    "test": "jest",
    "test.cov": "jest --coverage",
    "test.watch": "jest --watch",
    "start": "NODE_OPTIONS=--no-warnings ts-node --transpile-only -r dotenv/config fuse build.dev --watch --serve --pwa",
    "start.deving": "concurrently --kill-others-on-fail \"npm start\" \"npm run test.watch\"",
    "start.spa": "ts-node -r dotenv/config fuse build.dev --watch --serve --universal=0",
    "start.desktop": "NODE_OPTIONS=--no-warnings ts-node -r dotenv/config fuse build.dev --watch --serve --electron --pwa",
    "start.prod": "NODE_OPTIONS=--no-warnings ts-node -r dotenv/config fuse build.prod --prod --serve --pwa",
    "start.prod.desktop": "NODE_OPTIONS=--no-warnings ts-node -r dotenv/config fuse build.prod --prod --serve --electron --pwa",
    "build.prod": "ts-node fuse build.prod --prod --pwa",
    "build.prod.desktop": "ts-node fuse build.prod --prod --electron --pwa",
    "heroku-postbuild": "tslint -p tsconfig.json && npm run test.cov && ts-node fuse build.prod --prod --pwa",
    "lint": "tsc && tslint -p tsconfig.json",
    "release.mac": "npm run build.prod.desktop && BUILD_BYTECODE=true electron . && ts-node tools/scripts/electron-deps.ts && electron-builder --mac && ts-node tools/scripts/electron-deps-revert.ts "
  },
  "engines": {
    "node": "= 12.5.0"
  },
  "dependencies": {
    "@angular/platform-server": "^8.0.3",
    "compression": "git://github.com/patrickmichalina/compression.git",
    "express": "^4.17.1",
    "express-static-gzip": "^1.1.3"
  },
  "electron-natives": [],
  "devDependencies": {
    "@angular-devkit/build-optimizer": "^0.800.6",
    "@angular/animations": "^8.0.3",
    "@angular/common": "^8.0.3",
    "@angular/compiler": "^8.0.3",
    "@angular/compiler-cli": "^8.0.3",
    "@angular/core": "^8.0.3",
    "@angular/forms": "^8.0.3",
    "@angular/language-service": "^8.0.3",
    "@angular/platform-browser": "^8.0.3",
    "@angular/platform-browser-dynamic": "^8.0.3",
    "@angular/router": "^8.0.3",
    "@angular/service-worker": "^8.0.3",
    "@flosportsinc/ng-env-transfer-state": "^8.0.0",
    "@flosportsinc/ng-http-cache-tags": "^8.0.0",
    "@nguniversal/common": "^8.0.0-rc.1",
    "@nguniversal/express-engine": "^8.0.0-rc.1",
    "@ngx-translate/core": "^11.0.1",
    "@ngx-translate/http-loader": "^4.0.0",
    "@types/clean-css": "^4.2.1",
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.10",
    "@types/supertest": "^2.0.7",
    "@types/throng": "^4.0.2",
    "@types/yargs": "^13.0.0",
    "bytenode": "^1.1.1",
    "clean-css": "^4.2.1",
    "codelyzer": "^5.1.0",
    "concurrently": "^4.1.1",
    "consolidate": "^0.15.1",
    "cookie-parser": "1.4.4",
    "core-js": "^3.1.4",
    "dotenv": "^8.0.0",
    "electron": "^6.0.0-beta.11",
    "electron-builder": "^20.44.4",
    "electron-updater": "^4.0.14",
    "fuse-box": "^3.7.1",
    "jest": "^24.8.0",
    "jest-preset-angular": "^7.1.1",
    "jest-tap-reporter": "^1.9.0",
    "pug": "^2.0.4",
    "rxjs": "^6.5.2",
    "supertest": "^4.0.2",
    "terser": "^4.0.0",
    "throng": "^4.0.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-immutable": "^6.0.0",
    "typescript": "^3.5.2",
    "typescript-monads": "^3.13.0",
    "yargs": "^13.2.4",
    "zone.js": "^0.9.1"
  },
  "jest": {
    "rootDir": "src",
    "preset": "jest-preset-angular",
    "collectCoverageFrom": [
      "<rootDir>/**/*.ts"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      ".ngc"
    ],
    "setupFilesAfterEnv": [
      "../tools/scripts/jest-setup.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json",
        "stringifyContentPathRegex": "\\.html$",
        "astTransformers": [
          "jest-preset-angular/InlineHtmlStripStylesTransformer"
        ],
        "diagnostics": {
          "pathRegex": "\\.(spec|test)\\.ts$"
        }
      }
    },
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/.ngc"
    ],
    "reporters": [
      "jest-tap-reporter"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "text",
      "text-summary"
    ],
    "coverageDirectory": "../coverage",
    "coverageThreshold": {
      "src/browser/": {
        "statements": 25
      }
    }
  },
  "build": {
    "productName": "fusing-angular",
    "appId": "com.electron.fusing-angular",
    "directories": {
      "output": "dist/release/"
    },
    "files": [
      "dist/electron"
    ],
    "mac": {
      "artifactName": "fusing-angular-${version}.${os}.${ext}"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "fusing-angular-${version}.${os}.${ext}"
    },
    "linux": {
      "artifactName": "fusing-angular-${version}.${os}.${ext}"
    }
  }
}
