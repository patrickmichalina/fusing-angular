{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitUseStrict": false,
    "strictNullChecks": true,
    "noEmitHelpers": false,
    "noLib": false,
    "noEmit": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": false,
    "sourceMap": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["jest", "node"]
  },
  "include": [
    "fuse.ts",
    "src",
    "tools"
  ],
  "exclude": [
    "src/browser/main.aot.ts",
    "src/browser/.ngc/**/**",
    "src/electron/angular/main.aot.ts",
    "src/electron/angular/.ngc/**/**"
  ]
}